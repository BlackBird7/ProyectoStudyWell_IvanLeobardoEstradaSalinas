<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".segundaParte">
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_gravity="center">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Como segunda parte, con el fin de comprobar la Hipotesis\n-Los Estímulos Sonoros en decibeles altos afecta el rendimiento del estudiante en actividades de Estudio Académicas a los que están expuestos-\nPor lo cual repetiremos la prueba pasada, pero ahora se reproduciran Sonidos Aleatorios"
    android:textAlignment="center"
    android:textSize="15dp"
    android:textColor="#000000"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/icono2"
        android:layout_gravity="center"/>

    <android.support.design.widget.FloatingActionButton
        style="@style/AlertDialog.AppCompat"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/ic_media_play"
        app:backgroundTint="@color/colorAccent"
        android:layout_gravity="center"/>


</LinearLayout>
</LinearLayout>

</FrameLayout>